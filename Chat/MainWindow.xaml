<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Smart Chat" Height="350" Width="525" MaxHeight="500" MaxWidth="700" MinHeight="500" MinWidth="700">
    <Grid Background="#FF2D2D30">
        <ListBox x:Name="ListOfParticipants_ListBox" HorizontalAlignment="Left" Height="449" Margin="540,10,0,0" VerticalAlignment="Top" Width="142">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="ChatSpace_ListBox" HorizontalAlignment="Left" Height="345" Margin="10,10,0,0" VerticalAlignment="Top" Width="525"/>
        <Button x:Name="SendMessage_Button" Content="Send" HorizontalAlignment="Left" Margin="435,439,0,0" VerticalAlignment="Top" Width="100" Click="SendMessage_Button_Click"/>
        <Label x:Name="ParticipantTyping_Lable" Content="Label" HorizontalAlignment="Left" Margin="10,327,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TypeMessage_TextBox" HorizontalAlignment="Left" Height="74" Margin="10,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="525"/>

    </Grid>
</Window>

<Window x:Name="DialogWindow1" x:Class="Chat.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="User Name" Height="135.86" Width="300">
    <Grid>
        <Label x:Name="Dialog_label" Content="Enter your name:" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserName_TextBox" HorizontalAlignment="Center" Height="23" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" KeyDown="UserName_TextBox_KeyDown"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Center" Margin="100,64,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>
        <Button x:Name="Ok_Button" Content="Ok" HorizontalAlignment="Center" Margin="-100,64,0,0" VerticalAlignment="Top" Width="75" Click="Ok_Button_Click"/>

    </Grid>
</Window>
